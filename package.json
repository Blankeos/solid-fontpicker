{
  "name": "solid-fontpicker-monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "bun-types": "latest",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8"
  },
  "scripts": {
    "dev": "bun run --filter solid-fontpicker-ts dev",
    "build": "bun run --filter solid-fontpicker-ts build",
    "dev:site": "bun run --filter site dev",
    "build:site": "bun run --filter solid-fontpicker-ts build && bun run --filter site build",
    "preview:site": "bun run --filter site preview",
    "test": "bun run --filter solid-fontpicker-ts test",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "check": "bun run --filter '*' type-check",
    "publish-ci": "bun run lint && bun run build && changeset publish",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules"
  }
}
